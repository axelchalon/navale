{% extends 'AppBundle:template.html.twig' %}

{% block body %}

<h1>Liste des parties</h1>
<div class="parties">
	{% for game in games %}
	<div class="partie">
		<span class="nom">{{ game.name }} </span>
		<form action="{{ path('join_game', {'game_id': game.id }) }}" method="post" class="join">

			<input type="submit" value="Rejoindre" class="btn btn-primary">
			{% if game.has_password %}
				<input type="password" name="password" placeholder="Mot de passe">
			{% endif %}

		</form>
	</div>
	{% endfor %}
</div>
<div class="creer">
	<form action="{{ path('create_game') }}" method="post">
		<input type="text"  class="form-control" name="name" required="required">
		<input type="submit" value="CrÃ©er une partie" class="btn btn-success">
	</form>		
</div>

{% endblock %}